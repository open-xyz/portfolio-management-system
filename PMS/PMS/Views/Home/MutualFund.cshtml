@model PMS.Models.viewmodel;
<div class="container" style="margin-top: 50px;padding: 20px;box-shadow: 0 16px 26px -10px rgba(0, 82, 156, 0.56), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 82, 156, 0.2);">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h4>Mutual Fund</h4>
            </div>
            @* <div class="col-sm-4 text-right" style="display:inherit">
                @using (Html.BeginForm("Users", "Admin", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="Search By Stock ID" id="txtsearch" name="txtsearch" />
                        </div>
                        <div class="col-sm-4">
                            <input type="submit" id="btnSearch" class="btn btn-success" value="Search" />
                        </div>
                    </div>
                }
            </div> *@
            <div class="col-sm-6">
                <input type="button" id="btnSearch" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddMFModel" value="Add Mutual Fund" style="float:right" />
            </div>
        </div>

        <hr />
        <table id="tbluserMF" style="width:100%" class="table table-striped">
            <thead style="background-color: #a5d0f5;border-bottom: black;">
                <tr>
                    <td>
                        <h6 class="td1" style="font-size:16px">Transaction ID </h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">Sr.No</h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">MF ID</h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">MF Name</h6>
                    </td>
                   
                    <td>
                        <h6 class="td1" style="font-size:16px">Purchase date </h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">Purchase Quantity</h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">Quantity</h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">Folio No</h6>
                    </td>
                    <td>
                        <h6 class="td1" style="font-size:16px">Action</h6>
                    </td>
                </tr>
            </thead>

            @if (Model.lstUserMFDtls != null)
            {
                var i = 1;
                foreach (var data in Model.lstUserMFDtls.listUserMFDtls)
                {
                    <tr>
                        <td>@i</td>
                        <td>@data.MFTransactionNo</td>
                        <td>@data.MFID</td>
                        <td>@data.MFName</td>
                        <td>@data.PurchaseDate</td>
                        <td>@data.PurchaseQty</td>
                        <td>@data.Quantity</td>
                        <td>@data.FolioNo</td>
                        <td>
                            <a href="javascript:void(0)" id="update"><i class="fa fa-list"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="javascript:void(0)" id="delete"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    i++;
                }
            }
           
        </table>

    </div>

</div>

<div class="modal fade" id="AddMFModel" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Mutual Fund</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tblselectMF" style="width:100%" class="table table-striped">
                    <thead>
                        <tr>
                            <td>
                                <h6 class="td1" style="font-size:16px">select</h6>
                            </td>
                            <td>
                                <h6 class="td1" style="font-size:16px">MF ID </h6>
                            </td>
                            <td>
                                <h6 class="td1" style="font-size:16px">MF Name </h6>
                            </td>
                            <td>
                                <h6 class="td1" style="font-size:16px">Fund House</h6>
                            </td>
                            <td>
                                <h6 class="td1" style="font-size:16px">Fund Type</h6>
                            </td>
                            <td>
                                <h6 class="td1" style="font-size:16px">Face Value</h6>
                            </td>
                        </tr>
                    </thead>

                    @if (Model.lstMFDtls.listMFDtls != null)
                    {
                        foreach (var data in Model.lstMFDtls.listMFDtls)
                        {
                            <tr>
                                <td>
                                    <input type="radio" id="chkstock" name="stockardio">
                                </td>
                                <td>@data.MFID</td>
                                <td>@data.MFName</td>
                                <td>@data.FundHouse</td>
                                <td>@data.FundType</td>
                                <td>@data.FaceValue</td>
                            </tr>
                        }
                    }
                  
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#AddMFQty">Add</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddMFQty" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add MF - <label id="lblstockname"></label></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 mb-2">
                        <b>MF ID:&nbsp;<label id="lblstockid"></label></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <b>Face value:&nbsp;<label id="lblfvalue"></label></b>
                    </div>
                    <div class="col-sm-8 mt-2">
                        <label>Purchase Quantity</label>
                        <input type="text" class="form-control" placeholder="Quantity" id="txtPurqty" />
                    </div>
                    <div class="col-sm-8 mt-2">
                        <label>Quantity</label>
                        <input type="text" class="form-control" placeholder="Quantity" id="txtqty" />
                    </div>
                    <div class="col-sm-12 mt-4">
                        <b>Total:&nbsp;<label id="lbltotal">0</label></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="button" id="btnAdd" class="btn btn-success" value="Add" style="float:right" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="updateMFModelQty" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Mutual Fund <br /> <label id="lblustockname"></label></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 mb-2">
                        <b>Transaction ID:&nbsp;<label id="lblutransid"></label></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <b>MF ID:&nbsp;<label id="lblustockid"></label></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="col-sm-8 mt-2">
                        <label>Purchase Quantity</label>
                        <input type="text" class="form-control" placeholder="Quantity" id="txtuPurqty" />
                    </div>
                    <div class="col-sm-8 mt-2">
                        <label>Quantity</label>
                        <input type="text" class="form-control" placeholder="Quantity" id="txtuqty" />
                    </div>
                    <div class="col-sm-12 mt-4">
                        <input type="button" id="btnUpdate" class="btn btn-success" value="Update" style="float:right" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>